@model Group_6_Final_Project.Models.TransactionDetail

@{
    ViewData["Title"] = "Edit";
    Layout = "_Layout";
}

<h2>Edit</h2>

<h4>RegistrationDetail</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="TransactionDetailID" />
            <input type="hidden" asp-for="Schedule.ScheduleID" />
            <input type="hidden" asp-for="Schedule.Movie.Title" />
            <div class="form-group">
                <label class="control-label">Movie Title:</label>
                @Model.Schedule.Movie.Title
            </div>
            <div class="form-group">
                <label asp-for="SeatSelection" class="control-label"></label>
                <select asp-for="SeatSelection" class="form-control">
                    @foreach (var seat in Enum.GetValues(typeof(SeatSelection)))
                    {
                        <option value="@seat">@seat</option>
                    }
                </select>
                <span asp-validation-for="SeatSelection" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NumberofTickets" class="control-label"></label>
                <input asp-for="NumberofTickets" class="form-control" />
                <span asp-validation-for="NumberofTickets" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" asp-route-registrationId="@Model.Transaction.TransactionID">Back to List</a>
</div>
