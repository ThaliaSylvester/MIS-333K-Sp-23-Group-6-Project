@model Group_6_Final_Project.Models.TransactionDetail

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>TransactionDetail</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            @* Hidden field for TransactionID *@
            @Html.HiddenFor(model => model.TransactionID)

            @*<div class="form-group">
                <label class="control-label">Products:</label>
                @Html.DropDownList("SelectedProduct", (SelectList)ViewBag.AllProducts, new { @class = "form-control" })
            </div>*@

            <div class="form-group">
                <label asp-for="NumberOfTickets" class="control-label"></label>
                <input asp-for="NumberOfTickets" class="form-control" />
                <span asp-validation-for="NumberOfTickets" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="SeatSelection" class="control-label"></label>
                <select asp-for="SeatSelection" class="form-control">
                    @foreach (var seat in Enum.GetValues(typeof(SeatSelection)))
                    {
                        <option value="@seat">@seat</option>
                    }
                </select>
                <span asp-validation-for="SeatSelection" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="PaymentMethod" class="control-label"></label>
                <select asp-for="PaymentMethod" class="form-control">
                    @foreach (var paymentMethod in Enum.GetValues(typeof(PaymentMethod)))
                    {
                        <option value="@paymentMethod">@paymentMethod</option>
                    }
                </select>
                <span asp-validation-for="PaymentMethod" class="text-danger"></span>
            </div>

            @* Add dropdowns for StartTimes and Theatres using ViewBag *@
            <div class="form-group">
                <label class="control-label">Start Time:</label>
                @Html.DropDownList("SelectedStartTime", (SelectList)ViewBag.StartTimes, new { @class = "form-control" })
            </div>

            <div class="form-group">
                <label class="control-label">Theatre:</label>
                @Html.DropDownList("SelectedTheatre", (SelectList)ViewBag.Theatres, new { @class = "form-control" })
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
